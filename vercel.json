{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server-middleware/**"],
        "nodeVersion": "18.x"
      }
    }
  ],
  "dev": {
    "command": "npm run dev",
    "port": 3000
  },
  "routes": [
    { 
      "src": "/_nuxt/.+", 
      "headers": { 
        "Cache-Control": "public,max-age=31536000,immutable" 
      } 
    },
    { 
      "src": "/(.*)", 
      "dest": "/" 
    }
  ]
}
